{
  "name": "elecontrol",
  "version": "0.0.1",
  "description": "Control your PC from remote device",
  "author": {
    "name": "Carlos H."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chsjr1996/elecontrol"
  },
  "keywords": [
    "electron",
    "typescript",
    "boilerplate"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chsjr1996/elecontrol/issues"
  },
  "homepage": "https://github.com/chsjr1996/elecontrol#readme",
  "main": "./build/browser/main.js",
  "build": {
    "files": [
      "build/**/*"
    ],
    "appId": "org.electron.elecontrol",
    "linux": {
      "target": [
        "deb",
        "pacman"
      ]
    }
  },
  "scripts": {
    "clean:build": "rimraf build",
    "clean:linux": "rimraf dist/electron-elecontrol-linux-* dist/*.deb",
    "electron:compile": "npm run clean:build && tsc -p tsconfig.browser.json && ncp src/renderer build/renderer",
    "dev:server:tsc": "tsc -p tsconfig.server.json --watch",
    "dev:server:nodemon": "wait-on build && nodemon --watch 'build/browser/server' --exec 'node build/browser/server/App.js'",
    "dev:server:watch": "concurrently --name 'tsc,nodemon' --prefix name 'npm run dev:server:tsc' 'npm run dev:server:nodemon'",
    "dev:electron:run": "wait-on build && node scripts/start-dev.js",
    "dev:electron:all": "concurrently --names 'compile,run' --prefix name 'npm run electron:compile' 'npm run dev:electron:run'",
    "build:linux": "npm run clean:linux && npm run electron:compile && electron-builder --linux"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/express": "^4.17.13",
    "@types/node": "12",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.1.0",
    "electron": "^9.4.0",
    "electron-builder": "^22.7.0",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^6.8.0",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.12",
    "rimraf": "^3.0.2",
    "ts-loader": "^6.2.2",
    "tsc": "^1.20150623.0",
    "typescript": "^3.8.3",
    "wait-on": "^4.0.1"
  }
}
